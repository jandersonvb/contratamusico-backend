# ===========================================
# CONFIGURAÇÃO GERAL
# ===========================================
NODE_ENV=development
LOG_LEVEL=log
PORT=3000

# ===========================================
# BANCO DE DADOS
# ===========================================
DATABASE_URL="mysql://cm_user:password@localhost:3306/contratamusico"

# ===========================================
# AUTENTICAÇÃO JWT
# ===========================================
JWT_SECRET="defina_um_segredo_seguro_aqui_min_32_caracteres"
JWT_EXPIRES_IN="30d"
JWT_REFRESH_SECRET="defina_outro_segredo_diferente_min_32_caracteres"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# CORS E FRONTEND
# ===========================================
# Lista separada por vírgula
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200
FRONTEND_URL=http://localhost:3001

# ===========================================
# RATE LIMITING
# ===========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# ===========================================
# AWS S3 (UPLOAD DE IMAGENS)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=sua_access_key_aqui
AWS_SECRET_ACCESS_KEY=sua_secret_key_aqui
AWS_S3_BUCKET=nome-do-seu-bucket

# ===========================================
# SMTP (ENVIO DE E-MAILS)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-ou-app-password
SMTP_FROM=noreply@contratamusico.com

# ===========================================
# STRIPE (PAGAMENTOS)
# ===========================================
# Chaves da API (obtenha no Dashboard do Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs dos Planos (crie os produtos/preços no Stripe)
# Plano Profissional (R$ 49,90/mês ou R$ 479,00/ano)
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_xxx
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_yyy

# Plano Premium (R$ 99,90/mês ou R$ 959,00/ano)
STRIPE_PRICE_PREMIUM_MONTHLY=price_zzz
STRIPE_PRICE_PREMIUM_YEARLY=price_www

# URLs de redirecionamento após checkout (usam FRONTEND_URL se não definidas)
# STRIPE_SUCCESS_URL=http://localhost:3001/pagamento/sucesso
# STRIPE_CANCEL_URL=http://localhost:3001/planos
